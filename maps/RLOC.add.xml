<?xml version="1.0" encoding="UTF-8"?>

<additional xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">
    <!-- Configuration for traffic flow detectors (induction loops) -->

    <!-- Detector for lane Ramp_afterTL_0 -->
    <!-- 
        id: 'det_0' - The unique identifier for this detector.
        lane: 'Ramp_afterTL_0' - The lane where the detector is installed.
        pos: '-5' - The position of the detector on the lane (distance from the start of the lane, negative values may indicate a position after the traffic light).
        period: '100.00' - The update period for the sensor data (in seconds).
        file: 'det.out.xml' - The file where the sensor data will be stored.
    -->
    <inductionLoop id="det_0" lane="Ramp_afterTL_0" pos="-5" period="100.00" file="det.out.xml"/>

    <!-- Detector for lane HW_beforeRamp_1 -->
    <!-- 
        id: 'det_1' - The unique identifier for this detector.
        lane: 'HW_beforeRamp_1' - The lane where the detector is installed.
        pos: '-1' - The position of the detector on the lane.
        period: '100.00' - The update period for the sensor data (in seconds).
        file: 'det.out.xml' - The file where the sensor data will be stored.
    -->
    <inductionLoop id="det_1" lane="HW_beforeRamp_1" pos="-1" period="100.00" file="det.out.xml"/>

    <!-- Detector for lane HW_beforeRamp_0 -->
    <!-- 
        id: 'det_2' - The unique identifier for this detector.
        lane: 'HW_beforeRamp_0' - The lane where the detector is installed.
        pos: '-1' - The position of the detector on the lane.
        period: '100.00' - The update period for the sensor data (in seconds).
        file: 'det.out.xml' - The file where the sensor data will be stored.
    -->
    <inductionLoop id="det_2" lane="HW_beforeRamp_0" pos="-1" period="100.00" file="det.out.xml"/>
</additional>
